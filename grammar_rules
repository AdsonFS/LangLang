statement_list      : statement
                    | statement statement_list

statement           : variableDeclaration SEMICOLON 
                    | outputStream SEMICOLON
                    | inputStream SEMICOLON                    
                    | assignment
                    | identifier

variableDeclaration : FUNC identifier '{' statementList '}'
                    | (NUMBER|STRING) identifier = expression

outputStream        : >> output outputStream*
output              : expression 

inputStream         : << identifier inputStream*


assignment          : identifier = expression


expression          : expression: term ((PLUS|MINUS) term)*
term                : factor ((DIV|MULT|MOD) factor)*
factor              : (PLUS|MINUS)factor 
                    | NUMBER | STRING
                    | identifier
                    | '(' expression ')'

identifier          : IDENTIFIER
