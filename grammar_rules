statement_list      : statement
                    | statement statement_list

statement           : variable_declaration SEMICOLON 
                    | if_statement
                    | output_stream SEMICOLON
                    | input_stream SEMICOLON                    
                    | assignment
                    | identifier


if_statement        : IF '(' conditional ')' '{' statement_list '}'

conditional         : expression ( < | > ) expression

variable_declaration : FUNC identifier '{' statement_list '}'
                    | (NUMBER|STRING) identifier = expression

output_stream        : >> output output_stream*
output              : expression 

input_stream         : << identifier inputStream*


assignment          : identifier = expression


expression          : expression: term ((PLUS|MINUS) term)*
term                : factor ((DIV|MULT|MOD) factor)*
factor              : (PLUS|MINUS)factor 
                    | NUMBER | STRING
                    | identifier
                    | '(' expression ')'

identifier          : IDENTIFIER
